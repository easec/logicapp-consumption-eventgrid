{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "$connections": {
      "type": "object"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "state": "Enabled",
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "type": "Object",
              "defaultValue": {}
            }
          },
          "triggers": {
            "When_a_resource_event_occurs": {
              "type": "ApiConnectionWebhook",
              "inputs": {
                "host": {
                  "connection": {
                    "name": "[parameters('$connections')['azureeventgrid-1'].connectionId]"
                  }
                },
                "body": {
                  "properties": {
                    "topic": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/snapshottest-rg/providers/Microsoft.Storage/storageAccounts/snapshottestsa')]",
                    "destination": {
                      "endpointType": "WebHook",
                      "properties": {
                        "endpointUrl": "@listCallbackUrl()"
                      }
                    },
                    "filter": {
                      "includedEventTypes": [
                        "Microsoft.Storage.BlobTierChanged",
                        "Microsoft.Storage.BlobCreated"
                      ]
                    }
                  }
                },
                "path": "[concat('/subscriptions/', uriComponent(subscription().subscriptionId), '/providers/', uriComponent('Microsoft.Storage/storageAccounts'), '/resource/eventSubscriptions')]",
                "queries": {
                  "x-ms-api-version": "2017-09-15-preview"
                }
              }
            }
          },
          "actions": {
            "For_each": {
              "type": "Foreach",
              "foreach": "@coalesce(triggerOutputs()?['body'], json('[]'))",
              "actions": {
                "Condition": {
                  "type": "If",
                  "expression": {
                    "and": [
                      {
                        "contains": [
                          "@item()?['data']?['accessTier']",
                          "Hot"
                        ]
                      }
                    ]
                  },
                  "actions": {
                    "Send_an_email_(V2)": {
                      "type": "ApiConnection",
                      "inputs": {
                        "host": {
                          "connection": {
                            "name": "[parameters('$connections')['office365'].connectionId]"
                          }
                        },
                        "method": "post",
                        "path": "/v2/Mail",
                        "body": {
                          "To": "mats.johannesson@easec.se;mats.johannesson@iver.se",
                          "Subject": "Rehydration process finished for iScala",
                          "Body": "<p>Rehydration process finished for iScala.</p><p>File: @{item()?['subject']}</p><p>Previous tier: @{item()?['data']?['previousTier']}</p>",
                          "Importance": "Normal"
                        }
                      }
                    }
                  },
                  "else": {
                    "actions": {
                      "Send_an_email_(V2)_1": {
                        "type": "ApiConnection",
                        "inputs": {
                          "host": {
                            "connection": {
                              "name": "[parameters('$connections')['office365'].connectionId]"
                            }
                          },
                          "method": "post",
                          "path": "/v2/Mail",
                          "body": {
                            "To": "mats.johannesson@iver.se;mats.johannesson@easec.se",
                            "Subject": "Not hot",
                            "Body": "<p>Access tier: @{item()?['data']?['accessTier']}</p><p>Previous tier: @{item()?['data']?['previousTier']}</p><p>File: @{item()?['subject']}</p>",
                            "Importance": "Normal"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "outputs": {}
        },
        "parameters": {
          "$connections": {
            "value": {
              "office365": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', 'rg-iscala-archive', '/providers/Microsoft.Web/connections/office365')]",
                "connectionId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', 'rg-iscala-archive', '/providers/Microsoft.Web/connections/office365')]",
                "connectionName": "office365"
              },
              "azureeventgrid-1": {
                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', 'rg-iscala-archive', '/providers/Microsoft.Web/connections/azureeventgrid-1')]",
                "connectionId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', 'rg-iscala-archive', '/providers/Microsoft.Web/connections/azureeventgrid-1')]",
                "connectionName": "azureeventgrid-1"
              }
            }
          }
        }
      }
    }
  ]
}
