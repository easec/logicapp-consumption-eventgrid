{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": { "type": "string" },

    "office365ConnectionName": { "type": "string" },
    "office365DisplayName": { "type": "string" },

    "eventGridConnectionName": { "type": "string" },
    "eventGridDisplayName": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('office365ConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "[parameters('office365DisplayName')]",
        "api": {
          "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/office365')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[parameters('eventGridConnectionName')]",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "[parameters('eventGridDisplayName')]",
        "api": {
          "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', parameters('location'), '/managedApis/azureeventgrid')]"
        }
      }
    }
  ],
  "outputs": {
    "office365ConnectionResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', parameters('office365ConnectionName'))]"
    },
    "eventGridConnectionResourceId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', parameters('eventGridConnectionName'))]"
    }
  }
}
