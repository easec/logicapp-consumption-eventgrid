{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dashboardName": { "type": "string" },
    "location": { "type": "string" },
    "workbookResourceId": { "type": "string" }
  },
  "resources": [
    {
      "type": "Microsoft.Portal/dashboards",
      "apiVersion": "2020-09-01-preview",
      "name": "[parameters('dashboardName')]",
      "location": "[parameters('location')]",
      "properties": {
        "lenses": [
          {
            "order": 0,
            "parts": [
              {
                "position": { "x": 0, "y": 0, "rowSpan": 8, "colSpan": 16 },
                "metadata": {
                  "type": "Extension/Microsoft_Azure_Monitoring/PartType/WorkbookPart",
                  "inputs": [
                    {
                      "name": "resourceId",
                      "value": "[parameters('workbookResourceId')]"
                    }
                  ],
                  "settings": {
                    "content": {
                      "title": "Forwarding failures / successes",
                      "subtitle": "EventGrid → Function → Logic App"
                    }
                  }
                }
              }
            ]
          }
        ],
        "metadata": {
          "model": {
            "timeRange": { "value": "24h" },
            "filterLocale": "en-us"
          }
        }
      }
    }
  ]
}
